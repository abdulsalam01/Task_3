<%= provide(:contact,"active") %>
<%= provide(:title,"Contact") %>

    <section class="container">
        <div class="row">
            <div class="col-md-3">
                <h2>Riku Kiranatama</h2>
                <img src="http://www.8opon.pl/images/business_user_big.png" class="img-thumbnail img-circle profile">
            </div>
            <div class="col-sm-9 col-md-9">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Email</label>
                        <div class="col-sm-8 pull-right">
                            <input type="email" class="form-control" placeholder="Email Anda">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="message">Messages</label>
                        <div class="col-sm-8 pull-right"> 
                            <textarea class="form-control" rows="7" placeholder="Messages Anda"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>